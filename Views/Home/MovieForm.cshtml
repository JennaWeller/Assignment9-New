@{ ViewBag.Title = "Movie Collection Form";
                ViewBag.Header = "Movie Collection Form. Add your favorite movies here!"; }
@model Assignment3.Models.MovieResponse
<!-- form for movies, asp-for and asp action used instead -->
<h1> Add a Movie to the List!</h1>
<form asp-action="MovieForm" method="post">
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for=" Category" />
    </div>
    <div>
        <label asp-for="Title"> Title: </label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Year">  Year:</label>
        <input asp-for="Year" />
    </div>
    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />

    </div>
    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select One </option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        <label asp-for="Edited"> Yes </label>
        <input asp-for="Edited" type="radio" value="true" />
        <label asp-for="Edited"> No </label>
        <input asp-for="Edited" type="radio" value="false" />
    </div>
    <div>
        <label asp-for="Lent"> Lent To:</label>
        <input asp-for="Lent" />
    </div>
    <div>
        <label asp-for="Notes"> Notes:</label>
        <input asp-for="Notes" />
    </div>
    <button class="btn-primary" type="submit"> Input Your Movies</button>
    <!--brings in validation error -->
    <div asp-validation-summary="All"></div>
</form>